<h1>Listing contacts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Birthdate</th>
	<th>Sex</th>
	<th>English</th>
	<th>Spanish</th>
	<th>German</th>
    <th>Email</th>
    <th>Street number</th>
    <th>Colony</th>
	<th>State</th>
	<th>Municipality</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.birthdate %></td>
	<td><%= contact.sex %></td>
	<td><%= contact.languages_english %></td>
	<td><%= contact.languages_spanish %></td>
	<td><%= contact.languages_german %></td>
    <td><%= contact.email %></td>
    <td><%= contact.street_number %></td>
    <td><%= contact.colony %></td>
	<td><%= contact.state.name %></td>
	<td><%= contact.municipality.name %></td>
    <td><%= link_to 'Show', contact %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
    <td><%= link_to 'Destroy', contact, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

